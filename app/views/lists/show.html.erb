<h1><%= @list.name %></h1>
<p><%= link_to "Add movie to the list", new_list_bookmark_path(@list) %></p>

<% @list.movies.each do |movie| %>
  <div>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <%= image_tag movie.poster_url, alt: movie.title %>
    <p><strong><%= movie.title %></strong></p>
    <p><%= bookmark.comment %></p>
    <p><%= link_to "Delete", bookmark_path(bookmark), class: 'btn btn-cancel', data: { turbo_method: :delete, turbo_confrim: 'Are you sure you want to delete this movie from the lsit' } %></p>
  </div>


<% end %>



<p><%= link_to "Back to Lists", lists_path %></p>
<p><%= link_to "Delete this list", list_path(@list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Arfe you sure you want to delete this list?"} %></p>
